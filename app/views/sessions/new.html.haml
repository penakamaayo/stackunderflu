.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Please sign in
      .panel-body
        = form_tag log_in_path, :class => "form-horizontal" do
          %fieldset
            .form-group
              = email_field_tag :email, params[:email], :placeholder => "E-mail"

            .form-group
              = password_field_tag :password, params[:password], :placeholder => "Password"

            .form-group
              = submit_tag "Sign in", :class => "btn btn-md btn-primary"

              Not yet a member?
              = link_to "Sign up" , users_new_path
